{
    "comments": {
        "lineComment": "#",
        "blockComment": ["(*", "*)"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(def|if|elif|else|loop|begin)\\s*.*$",
        "decreaseIndentPattern": "^\\s*(end|elif|else)\\s*.*$"
    },
    "wordPattern": "\\b[a-zA-Z][a-zA-Z0-9_]*\\b"
}
